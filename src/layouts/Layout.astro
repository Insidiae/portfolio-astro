---
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";

export interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
const profileImage = "https://avatars.githubusercontent.com/u/28495550";
const profileImageAlt = "KB Ruado's Github Profile image";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			description={description}
			openGraph={{
				basic: {
					title,
					type: "website",
					image: profileImage,
					url: "https://insidiae.github.io",
				},
				image: {
					alt: profileImageAlt,
					type: "image/jpg",
					width: 128,
					height: 128,
				},
			}}
			twitter={{
				card: "summary",
			}}
			extend={{
				meta: [
					{ name: "twitter:title", content: title },
					{ name: "twitter:image", content: profileImage },
					{ name: "twitter:image:alt", content: profileImageAlt },
					{ name: "twitter:description", content: description },
				],
			}}
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />

		<style is:global>
			/* 
				* Josh W. Comeau's Custom CSS Reset
				? https://www.joshwcomeau.com/css/custom-css-reset/
			*/
			/*
				1. Use a more-intuitive box-sizing model.
			*/
			*,
			*::before,
			*::after {
				box-sizing: border-box;
			}
			/*
				2. Remove default margin
			*/
			* {
				margin: 0;
			}
			/*
				3. Allow percentage-based heights in the application
			*/
			html,
			body {
				height: 100%;
			}
			/*
				Typographic tweaks!
				4. Add accessible line-height
				5. Improve text rendering
			*/
			body {
				line-height: 1.5;
				-webkit-font-smoothing: antialiased;
			}
			/*
				6. Improve media defaults
			*/
			img,
			picture,
			video,
			canvas,
			svg {
				display: block;
				max-width: 100%;
			}
			/*
				7. Remove built-in form typography styles
			*/
			input,
			button,
			textarea,
			select {
				font: inherit;
			}
			/*
				8. Avoid text overflows
			*/
			p,
			h1,
			h2,
			h3,
			h4,
			h5,
			h6 {
				overflow-wrap: break-word;
			}
			/*
				9. Create a root stacking context
			*/
			body,
			#root,
			#__next {
				isolation: isolate;
			}

			/* 
			*=========================*
			*     GENERAL STYLES      *
			*=========================*
			*/
			:root {
				--color-primary: hsl(130deg 57% 56%);
				--color-primary-light: hsl(130deg 61% 64%);
				--color-primary-light-2: hsl(128deg 76% 90%);
			}

			body {
				overflow-x: hidden;
			}

			@media (prefers-reduced-motion: no-preference) {
				html,
				body {
					scroll-behavior: smooth;
				}
			}

			/* 
			*=========================*
			*       TYPOGRAPHY        *
			*=========================*
			*/

			@font-face {
				font-family: "Recursive";
				font-style: oblique 0deg 15deg;
				font-weight: 300 900;
				font-display: swap;
				src: url(/portfolio-assets/fonts/Recursive-optimized.woff2)
					format("woff2");
				unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
					U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193,
					U+2212, U+2215, U+FEFF, U+FFFD;
			}

			body {
				font-family: "Recursive", sans-serif;
			}

			.heading-primary {
				margin-bottom: 32px;
				font-size: clamp(2.2rem, 5.5vw - 1rem, 3.3rem);
				font-weight: 700;
				line-height: 1.1;
			}

			.heading-secondary {
				display: inline-block;
				font-size: clamp(1.85rem, 4.5vw - 1rem, 2.75rem);
				font-weight: 700;
				line-height: 1.1;
				text-transform: uppercase;
				letter-spacing: 1px;
				font-variation-settings: "slnt" -12;
			}

			.heading-tertiary {
				font-size: 1.17rem;
				font-weight: 700;
				line-height: 1.1;
			}

			/* 
			*=========================*
			*         UTILITY         *
			*=========================*
			*/

			.u-center-text {
				text-align: center !important;
			}

			.u-margin-top--sm {
				margin-top: 16px;
			}

			.u-margin-top--lg {
				margin-top: 64px;
			}

			.u-margin-bottom--md {
				margin-bottom: 32px;
			}

			/* 
			*=========================*
			*        COMPONENTS       *
			*=========================*
			*/

			.btn,
			.btn:link,
			.btn:visited {
				display: inline-block;
				width: fit-content;
				padding: 8px 16px;
				border-radius: 8px;
				color: hsl(0deg 0% 100%);
				background-color: var(--color-primary);
				text-decoration: none;
				transition: background-color 500ms;
			}

			.btn--large,
			.btn--large:link,
			.btn--large:visited {
				padding: 16px 32px;
				border-radius: 9999px;
			}

			.btn:hover {
				background-color: var(--color-primary-light);
				transition: background-color 250ms;
			}

			.card-list {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 48px;
			}
		</style>

		<script
			type="module"
			src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
		></script>
		<script
			nomodule
			src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
		></script>
	</body>
</html>

